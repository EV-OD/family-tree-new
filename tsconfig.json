// tsconfig.app.json
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,                // Allows JavaScript files to be included
    "checkJs": false,               // Set to true if you want JS files to be type-checked
    "jsx": "react-jsx",             // Use "react-jsx" for React 17+ JSX transform
    "strict": true,                 // Enable strict type-checking options
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                 // Sets the base directory for resolving paths
    "paths": {
      "@/*": ["src/*"]              // Alias for the src directory
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
